{
  "compilerOptions": {
    "declaration": false,
    "importHelpers": true,
    "skipLibCheck": true,
    "module": "node16",
    "outDir": "dist",
    "strict": true,
    "target": "esnext",
    "sourceMap": true,
    "allowJs": true,
    "lib": ["esnext"],
    "incremental": true,
    "noEmit": true
  },
  "include": [ "src/**/*", "test/**/*", "**/.eslintrc.cjs", "webpack.config.cjs" ],
  "exclude": [ "dist/**/*" ]
}
